<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
  #div1{
    background-color:red;
    height:100px;
    width:100px;
  }
  </style>
  <script>
    function transin(){
      var CL = document.getElementById('div1');
      CL.style.width='50px';
      CL.style.height='50px'; 
    }
    function transout(){
      var CL = document.getElementById('div1');
      //为什么这里不可以使用getElementByClassName
      CL.style.width='100px';
      CL.style.height='100px';
      CL.style.background='blue';
      //为什么这里不可以写background-color
    }
  </script>
</head>
<body>
  <div id="div1" class="div2" onmouseover="transin()" onmouseout="transout()"></div>
</body>
</html>
